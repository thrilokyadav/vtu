<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="blueclimb.com.vtudemo.MainActivity"
    android:background="@drawable/bg1">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout android:orientation="horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent">
        <LinearLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="0dp">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_alignParentStart="true"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:onClick="attendance"
                android:background="@drawable/card_edge"
                app:cardUseCompatPadding="true"
                >

                <TextView
                    android:id="@+id/attendance"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@string/font_family_thin"
                    android:text="Attendance"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="5dp"
                    android:paddingTop="35dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:src="@drawable/chartline2" />

            </android.support.v7.widget.CardView>


        </LinearLayout>



        <LinearLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="0dp">



            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="175dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:onClick="internals"
                android:elevation="5dp"
                app:cardUseCompatPadding="true">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Internals"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:fontFamily="@string/font_family_thin"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    />
                <ImageView
                    android:paddingTop="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="5dp"
                    android:src="@drawable/bookopenpagevariant"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"/>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </LinearLayout>

        <LinearLayout android:orientation="horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent">
            <LinearLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="0dp"
                android:weightSum="1">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="175dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="3dp"
                    android:onClick="syllabus"
                    android:layout_weight="0.94"
                    app:cardUseCompatPadding="true">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Syllabus"
                        android:textSize="20dp"
                        android:textColor="#ffffff"
                        android:fontFamily="@string/font_family_thin"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"/>

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        android:paddingTop="50dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:src="@drawable/notebook" />
                </android.support.v7.widget.CardView>



            </LinearLayout>
            <LinearLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="0dp">


                <android.support.v7.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="175dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="3dp"
                    android:onClick="coe"
                    app:cardUseCompatPadding="true">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Calendar of Events"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:fontFamily="@string/font_family_thin"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        />
                    <ImageView
                        android:paddingTop="35dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        android:src="@drawable/calendarmultiplecheck"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"/>
                </android.support.v7.widget.CardView>


            </LinearLayout>
        </LinearLayout>



        <LinearLayout android:orientation="horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent">
            <LinearLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="0dp"
                android:weightSum="1">
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="175dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="3dp"
                    android:onClick="staffappraisal"
                    android:layout_weight="0.93"
                    app:cardUseCompatPadding="true">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Staff Appraisal"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textColor="#ffffff"
                        android:fontFamily="@string/font_family_thin"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"/>

                    <ImageView
                        android:paddingTop="35dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="5dp"
                        android:src="@drawable/accountstar"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:layout_marginTop="10dp"/>
                </android.support.v7.widget.CardView>

            </LinearLayout>
            <LinearLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="0dp">

                <android.support.v7.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="175dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:onClick="notes"
                    app:cardUseCompatPadding="true">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Notes"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:fontFamily="@string/font_family_thin"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        />
                    <ImageView
                        android:paddingTop="35dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="5dp"
                        android:src="@drawable/bookopenvariant"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="30dp"
                        android:layout_marginRight="30dp"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:orientation="horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent">
            <LinearLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="0dp">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="3dp"
                    android:onClick="notification"
                    app:cardUseCompatPadding="true">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Notification"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textColor="#ffffff"
                        android:fontFamily="@string/font_family_thin"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"/>

                    <ImageView
                        android:paddingTop="35dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="5dp"
                        android:src="@drawable/wan"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"/>
                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="0dp">


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</RelativeLayout>
